<Window x:Class="EmailService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800
        "
        >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <!-- Ширина кнопки -->
            <ColumnDefinition Width="*" />
            <!-- Оставшееся пространство для DataGrid -->
        </Grid.ColumnDefinitions>

        <Button Content="Отправить" Click="SendButtonClick" Grid.Column="0" VerticalAlignment="Top" Margin="10" Width="85"/>
        
        <DataGrid x:Name="clientDataGrid" Grid.Column="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="150" />
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150" />
                <DataGridTextColumn Header="e-mail" Binding="{Binding Email}" Width="200" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150" />
            </DataGrid.Columns>

            
        </DataGrid>

        

    </Grid>
</Window>


